{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "./build/js/",
        "listFiles": true,
        "preserveConstEnums": true,
        "noLib": false,
        "suppressExcessPropertyErrors": true,
        "suppressImplicitAnyIndexErrors": true,
        "noResolve": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "src/ecs/components.ts",
        "src/ecs/entity.ts",
        "src/ecs/systems.ts",
        "src/graphics/imagecache.ts",
        "src/graphics/spritesheet.ts",
        "src/graphics/spritesheetcache.ts",
        "src/system/audiopool.ts",
        "src/system/camera.ts",
        "src/system/game_config.ts",
        "src/system/game.ts",
        "src/system/input.ts",
        "src/types/types.ts",
        "src/util/utility.ts",
        "src/world/cave.ts",
        "src/world/cell.ts",
        "src/world/dungeon.ts",
        "src/world/game_objs.ts",
        "src/world/level.ts",
        "src/world/room.ts"
    ],
    "formatCodeOptions": {
        "indentSize": 4,
        "tabSize": 4,
        "insertSpaceAfterCommaDelimiter": true,
        "insertSpaceAfterSemicolonInForStatements": true,
        "insertSpaceBeforeAndAfterBinaryOperators": true,
        "insertSpaceAfterKeywordsInControlFlowStatements": true,
        "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
        "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
        "placeOpenBraceOnNewLineForFunctions": false,
        "placeOpenBraceOnNewLineForControlBlocks": false
    },
    "atom": {
        "rewriteTsconfig": true,
        "formatOnSave": true
    }
}
